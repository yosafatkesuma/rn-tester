{
  "compilerOptions": {
    "strictPropertyInitialization": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "baseUrl": "src",
    "esModuleInterop": true,
    "jsx": "react",
    "lib": [
      "es6",
      "ES2021.String"
    ],
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": false,
    "paths": {
      "@app/*": [
        "./*"
      ],
    },
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "esnext",
    "types": [
      "react",
      "react-native",
      "node"
    ],
    "emitDecoratorMetadata": true,
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js"
  ],
  "extends": "expo/tsconfig.base",
}